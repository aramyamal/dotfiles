# Completion Menu
set completion-bg               "#CFCFCF"
set completion-fg               "#353535"
set completion-group-bg         "#D7D7D7"
set completion-group-fg         "#3B8992"
set completion-highlight-bg     "#286486"
set completion-highlight-fg     "#EEEEEE"

# Index / Sidebar
set index-bg                    "#CFCFCF"
set index-fg                    "#353535"
set index-active-bg             "#286486"
set index-active-fg             "#EEEEEE"

# Input Bar
set inputbar-bg                 "#EEEEEE"
set inputbar-fg                 "#353535"

# Status Bar
set statusbar-bg                "#CFCFCF"
