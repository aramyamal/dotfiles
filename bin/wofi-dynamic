#!/usr/bin/env bash

current_theme=$($HOME/bin/get_theme_mode)


if [[ "$current_theme" == "dark" ]]; then
    STYLE="$HOME/.config/wofi/dark/style.css"
else
    STYLE="$HOME/.config/wofi/light/style.css"
fi

CONFIG="$HOME/.config/wofi/config"

exec uwsm app -- wofi --show drun --config="$CONFIG" --style="$STYLE"
