#!/usr/bin/env bash

theme_mode_path="$XDG_CONFIG_HOME/theme/.theme_mode"
current_theme=$($XDG_CONFIG_HOME/bin/get_theme_mode)
if [ "$current_theme" = "dark" ]; then
    echo "light" > "$theme_mode_path"
    "$XDG_CONFIG_HOME/bin/light"
else
    echo "dark" > "$theme_mode_path"
    "$XDG_CONFIG_HOME/bin/dark"
fi
